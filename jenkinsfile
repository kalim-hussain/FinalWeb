pipeline {
    agent any 

    stages {
        stage('Stop Existing Container') {
            steps {
                script {
                    // Stop the Docker container if it's running
                    sh 'docker stop my-nginx-container || true'
                }
            }
        }

        stage('Remove Existing Container') {
            steps {
                script {
                    // Remove the Docker container if it exists
                    sh 'docker rm my-nginx-container || true'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t hussainkalim43/firtweb .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container
                    sh 'docker run -d -p 80:80 --name my-nginx-container hussainkalim43/firtweb'
                }
            }
        }
    }
    
    post {
        always {
            // Cleanup: Remove the container after build
            sh 'docker stop my-nginx-container || true'
            sh 'docker rm my-nginx-container || true'
        }
    }
}
